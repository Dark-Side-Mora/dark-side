# Check commit message format
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert|merge)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo "ğŸ“ Commit message should follow the format:"
    echo "   <type>(<scope>): <description>"
    echo ""
    echo "ğŸ“‹ Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
    echo "ğŸ“‹ Examples:"
    echo "   feat: add user authentication"
    echo "   fix(api): resolve validation error"
    echo "   docs: update README with installation steps"
    echo ""
    exit 1
fi

echo "âœ… Commit message format is valid!"